<Window x:Class="Stive.Client.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:hc="https://handyorg.github.io/handycontrol"

        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stive.Client"
        mc:Ignorable="d"
        Title="Login" Height="349" Width="339">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Text="NEGOSUD" VerticalAlignment="Top" Margin="0,15,0,0" Style="{hc:StaticResource TextBlockDefaultInfo}" FontSize="25" FontFamily="Bauhaus 93 Normal"/>
            <TextBlock Text="Email" HorizontalAlignment="Center" Margin="0,75,0,0" VerticalAlignment="Top" FontSize="15"/>  
            <TextBox x:Name="emailInput" TextWrapping="Wrap" Width="300" />
            <TextBlock Text="Mot de passe" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" FontSize="15" />
            <PasswordBox x:Name="passwordInput" Width="300" Margin="0,5,0,0" />
            <Button x:Name="btnLogin" Margin="0,5,0,0" Content="Connexion"  VerticalAlignment="Top" HorizontalAlignment="Center" Width="220" Style="{hc:StaticResource ButtonPrimary}" Click="btnLogin_Click" FontSize="15" />

        </StackPanel>

    </Grid>
</Window>
