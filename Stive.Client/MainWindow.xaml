<Window x:Class="Stive.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stive.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="emailInput" HorizontalAlignment="Center" Margin="0,120,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="220" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="passwordInput" HorizontalAlignment="Center" Margin="0,199,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="220"/>
        <TextBlock HorizontalAlignment="Left" Margin="345,50,0,0" TextWrapping="Wrap" Text="NEGOSUD" VerticalAlignment="Top" Background="#FF0056FF" Foreground="Black" FontStyle="Normal" Width="123" FontSize="25"/>

    </Grid>
</Window>
