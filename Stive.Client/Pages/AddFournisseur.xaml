<Window x:Class="Stive.Client.Pages.AddFournisseur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stive.Client.Pages"
        mc:Ignorable="d"
        Title="AddFournisseur"       
        Height="270" Width="350">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <Label Content="Nom"/>
            <TextBox x:Name="nameInput"/>
            <Label Content="Email" />
            <TextBox x:Name="emailInput"/>
            <Label Content="Siret" />
            <TextBox x:Name="siretInput" />
            <Label Content="Telephone" />
            <TextBox x:Name="telInput" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Valider" Click="Button_valider_Click"></Button>
                <Button Content="Annuler" Click="Button_annuler_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
