<Window x:Class="Stive.Client.Pages.UpdateClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Ajouter un client" 
        Height="369" Width="349">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Nom"/>
            <TextBox x:Name="nameInput"/>
            <Label Content="Prénom"/>
            <TextBox x:Name="surnameInput"/>
            <Label Content="Email"/>
            <TextBox x:Name="emailInput"/>
            <Label Content="Mot de passe"/>
            <PasswordBox x:Name="password" />
            <Label Content="Role"/>
            <ComboBox  Width="220" x:Name="roleSelector" DisplayMemberPath="Name" SelectedValuePath="Id"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  >

                <Button Content="Valider" Style="{hc:StaticResource ButtonSuccess}" Click="btn_valider_Click"/>
                <Button Content="Annuler" Style="{hc:StaticResource ButtonDanger}" Click="btn_annuler_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
