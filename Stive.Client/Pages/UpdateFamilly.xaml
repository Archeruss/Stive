<Window x:Class="Stive.Client.Pages.UpdateFamilly"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
      mc:Ignorable="d" 
      Height="140" Width="270"
      Title="Mettre à jour une catégorie">

    <Grid>
        <StackPanel>
            <Label Content="Label de la catégorie :"/>
            <TextBox x:Name="labelInput" TextWrapping="Wrap" Text="{Binding Label}" Width="250" Height="20" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5,0,5,0" VerticalAlignment="Center" >
                <Button Content="Valider" Style="{hc:StaticResource ButtonSuccess}" Click="Button_valider_Click"/>
                <Button Content="Annuler" Style="{hc:StaticResource ButtonDanger}" Click="Button_annuler_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
