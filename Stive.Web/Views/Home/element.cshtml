<h1>Achat de bouteilles</h1>

<div class="infos">
    <img id="idImg" src=''>
    <div style="margin-left: 20px;">
        <h2></h2>
        <p class='prix display-2 prixId'></p>
        <p class="display-4 desc"></p>
        <p class="display-4 cat"></p>
        <form method="get" action="/Home/paywall">
            <input class="form-control" type="number" id="formId" name="id" value='@ViewData["id"]' hidden><br>
            <input class="form-control" type="number" name="number" value="1"><br>
            <input class="btn btn-primary" type="submit" value="Acheter une bouteille">
        </form>
    </div>  
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<script>
    var id = @ViewData["id"]
    window.addEventListener("load", function(event) {
        $.ajax({
            type: "GET",
            url: "https://localhost:7189/api/Articles/" + id,
            dataType: 'json',
            data: JSON.stringify({}),
            contentType:'application/json; charset=utf-8 ',
            success: function (msg) {
                
                console.log(msg)
                document.getElementById('idImg').setAttribute("src", msg.mediaPath)
                document.getElementById('formId').setAttribute("href", msg.id)
                document.querySelector(".infos h2").innerHTML = msg.designation
                document.querySelector(".infos .desc").innerHTML = msg.description
                document.querySelector(".infos .prixId").innerHTML = msg.prix + " €"
                $.ajax({
                    type: "GET",
                    url: "https://localhost:7189/api/Categories/" + msg.categorieId,
                    dataType: 'json',
                    data: JSON.stringify({}),
                    contentType:'application/json; charset=utf-8 ',
                    success: function (msg2) {
                        document.querySelector('.cat').innerHTML = "Catégorie : " + msg.label
                        
                        
                    },
                });
            },
        });
    });
    
</script>
